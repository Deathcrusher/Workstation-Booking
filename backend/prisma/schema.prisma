generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("BAND")
  band      Band?    @relation(fields: [bandId], references: [id])
  bandId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Band {
  id           String    @id @default(uuid())
  name         String
  contactEmail String    @unique
  isActive     Boolean   @default(true)
  users        User[]
  rooms        Room[]
  bookings     Booking[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("bands")
}

model Room {
  id          String    @id @default(uuid())
  name        String
  location    String
  features    String    // Stored as comma-separated values
  color       String
  bands       Band[]
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("rooms")
}

model Booking {
  id        String   @id @default(uuid())
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String
  band      Band     @relation(fields: [bandId], references: [id])
  bandId    String
  start     DateTime
  end       DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("bookings")
}
